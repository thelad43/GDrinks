@model OrderFormViewModel

@{
    ViewData["Title"] = "Checkout";
}

<h2>Checkout</h2>

<div class="row orderForm">
    <br />
    <div class="col-md-1">
    </div>
    <div class="col-md-10">
        <h3 class="text-center">You are just one step away from ordering your drinks.</h3>
        <form asp-area="" asp-controller="Orders" asp-action="Checkout" method="post">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.AddressLine"></label>
                <input asp-for="@Model.AddressLine" class="form-control" />
                <span asp-validation-for="@Model.AddressLine" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Country"></label>
                <input asp-for="@Model.Country" class="form-control" />
                <span asp-validation-for="@Model.Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.ZipCode"></label>
                <input asp-for="@Model.ZipCode" class="form-control" />
                <span asp-validation-for="@Model.ZipCode" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Checkout</button>
            <br />
            <br />
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}