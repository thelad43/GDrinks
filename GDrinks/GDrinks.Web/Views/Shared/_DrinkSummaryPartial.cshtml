@model DrinkServiceModel

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="@Model.ImageThumbnailUrl" style="width:330px;height:330px;margin-top:5px" />
        <div class="caption">
            <h3 class="pull-right">@Model.Price.ToString("c")</h3>
            <h3>
                <a asp-controller="Drinks" asp-action="Details" asp-route-id="@Model.Id">@Model.Name</a>
            </h3>
            <p>@Model.Description</p>
        </div>
        <div class="addToCart text-right">
            <p class="button">
                @if (User.IsInRole(WebConstants.AdministratorRole))
                {
                <a class="btn btn-warning" asp-area="Admin" asp-controller="Drinks" asp-action="Edit" asp-route-id="@Model.Id">
                    Edit
                </a>
                <a class="btn btn-danger" asp-area="Admin" asp-controller="Drinks" asp-action="Delete" asp-route-id="@Model.Id">
                    Delete
                </a>
                }
                <a class="btn btn-success" id="cartButton" asp-area="" asp-controller="ShoppingCart" asp-action="Add" asp-route-id="@Model.Id">
                    Add to cart
                </a>
            </p>
        </div>
    </div>
</div>