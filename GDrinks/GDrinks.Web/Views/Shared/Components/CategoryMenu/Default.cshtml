@model IEnumerable<Category>

<li class="dropdown">
    <a asp-controller="Drink"
       asp-action="Index"
       class="dropdown-toggle" data-toggle="dropdown">Drinks<b class="caret"></b></a>
    <ul class="dropdown-menu">
        @foreach (var category in Model)
        {
            <li>
                <a asp-area="" asp-controller="Drinks" asp-action="Index" asp-route-category="@category.Name">@category.Name</a>
            </li>
        }
        <li class="divider"></li>
        <li>
            <a asp-controller="Drinks" asp-action="Index">View all drinks</a>
        </li>
    </ul>
</li>