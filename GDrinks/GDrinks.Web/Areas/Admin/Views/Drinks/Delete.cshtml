@model DeleteDrinkViewModel

@{
    ViewData["Title"] = "Delete a drink";
}

<h1 class="text-danger">@ViewData["Title"]</h1>

<p><h3 class="text-danger">Are you sure you want to delete animal @Model.Name?</h3></p>

<br />

<div class="row">
    <div class="col-md-1">
        <a asp-area="" asp-controller="Drinks" asp-action="Index" class="btn btn-success">Back</a>
    </div>
    <div>
        <form asp-area="Admin" asp-controller="Drinks" asp-action="Destroy" asp-route-id="@Model.Id" method="post">
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
    </div>
</div>

<br />
<br />