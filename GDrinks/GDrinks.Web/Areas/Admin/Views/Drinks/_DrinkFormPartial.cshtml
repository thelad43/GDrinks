@model DrinkFormViewModel

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Name"></label>
                <input asp-for="@Model.Name" class="form-control" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Description"></label>
                <input asp-for="@Model.Description" class="form-control" />
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>
            <div class="md-form">
                <label asp-for="@Model.FullDescription"></label>
                <textarea asp-for="@Model.FullDescription" class="md-textarea form-control" rows="5"></textarea>
                <span asp-validation-for="@Model.FullDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Price"></label>
                <input asp-for="@Model.Price" class="form-control" />
                <span asp-validation-for="@Model.Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.ImageUrl"></label>
                <input asp-for="@Model.ImageUrl" class="form-control" />
                <span asp-validation-for="@Model.ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.ImageThumbnailUrl"></label>
                <input asp-for="@Model.ImageThumbnailUrl" class="form-control" />
                <span asp-validation-for="@Model.ImageThumbnailUrl" class="text-danger"></span>
            </div>
            <div class="checkbox">
                <div class="checkbox-container">
                    <input asp-for="@Model.IsPreferred" id="checkbox-default" checked type="checkbox" />
                    <div class="checkbox-checkmark"></div>
                </div>
                <label asp-for="@Model.IsPreferred" for="checkbox-default"></label>
                <span asp-validation-for="@Model.IsPreferred" class="text-danger"></span>
            </div>
            <br />
            <div class="checkbox small">
                <div class="checkbox-container">
                    <input asp-for="@Model.IsInStock" id="checkbox-small" checked type="checkbox" />
                    <div class="checkbox-checkmark"></div>
                </div>
                <label asp-for="@Model.IsInStock" for="checkbox-small"></label>
                <span asp-validation-for="@Model.IsInStock" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="@Model.Category"></label>
                <input asp-for="@Model.Category" class="form-control" />
                <span asp-validation-for="@Model.Category" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">@ViewData["Action"]</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml" />
}